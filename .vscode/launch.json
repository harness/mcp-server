{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "STDIO Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/harness-mcp-server",
            "args": ["stdio", "--enable-modules=all", "--log-file=harness_mcp.log", "--enable-license"],
            "env": {
                "NG_MANAGER_BASE_URL": "<NG_MANAGER_BASE_URL>",
                "NG_MANAGER_SECRET": "<NG_MANAGER_SECRET>",
                "HARNESS_MCP_MODE": "<HARNESS_MCP_MODE>",
                "HARNESS_API_KEY": "<HARNESS_API_KEY>",
                "HARNESS_DEFAULT_ORG_ID": "<HARNESS_DEFAULT_ORG_ID>",
                "HARNESS_DEFAULT_PROJECT_ID": "<HARNESS_DEFAULT_PROJECT_ID>",
                "HARNESS_BASE_URL": "<HARNESS_BASE_URL>"
            }
        },
        {
            "name": "HTTP Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/harness-mcp-server",
            "args": ["http-server"],
            "env": {
                "NG_MANAGER_BASE_URL": "<NG_MANAGER_BASE_URL>",
                "NG_MANAGER_SECRET": "<NG_MANAGER_SECRET>",
                "HARNESS_MCP_MODE": "<HARNESS_MCP_MODE>",
                "HARNESS_API_KEY": "<HARNESS_API_KEY>",
                "HARNESS_MCP_SVC_SECRET": "<HARNESS_MCP_SVC_SECRET>",
                "HARNESS_DEFAULT_ORG_ID": "<HARNESS_DEFAULT_ORG_ID>",
                "HARNESS_DEFAULT_PROJECT_ID": "<HARNESS_DEFAULT_PROJECT_ID>",
                "HARNESS_BASE_URL": "<HARNESS_BASE_URL>",
            }
        },
        {
            "name": "Run E2E Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "buildFlags": "-tags=e2e",
            "program": "${workspaceFolder}/test/e2e",
            "args": ["-test.v"],
            "env": {
                "HARNESS_MCP_SERVER_E2E_TOKEN": "<HARNESS_API_KEY>",
                "HARNESS_MCP_SERVER_E2E_ORG_ID": "<HARNESS_DEFAULT_ORG_ID>",
                "HARNESS_MCP_SERVER_E2E_PROJECT_ID": "<HARNESS_DEFAULT_PROJECT_ID>",
                "HARNESS_MCP_SERVER_E2E_BASE_URL": "<HARNESS_BASE_URL>"
            }
        }
    ]
}