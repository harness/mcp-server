{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "HTTP Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/external/cmd/harness-mcp-server",
            "args": ["http-server"],
            "env": {
                "HARNESS_LOG_FORMAT": "json",
                "HARNESS_DEBUG": "true",
                "HARNESS_BASE_URL": "<HARNESS_BASE_URL>",
                "HARNESS_API_KEY": "<HARNESS_API_KEY>",
                "HARNESS_DEFAULT_ORG_ID": "<HARNESS_DEFAULT_ORG_ID>",
                "HARNESS_DEFAULT_PROJECT_ID": "<HARNESS_DEFAULT_PROJECT_ID>",
                "HARNESS_TOOLSETS": "<TOOLSETS_TO_ENABLE>"
            }
        },
        {
            "name": "STDIO Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/external/cmd/harness-mcp-server",
            "args": ["stdio", "--log-file=harness_mcp.log"],
            "env": {
                "HARNESS_LOG_FORMAT": "json",
                "HARNESS_DEBUG": "true",
                "HARNESS_API_KEY": "<HARNESS_API_KEY>",
                "HARNESS_DEFAULT_ORG_ID": "<HARNESS_DEFAULT_ORG_ID>",
                "HARNESS_DEFAULT_PROJECT_ID": "<HARNESS_DEFAULT_PROJECT_ID>",
                "HARNESS_BASE_URL": "<HARNESS_BASE_URL>",
                "HARNESS_TOOLSETS": "<TOOLSETS_TO_ENABLE>"
            }
        }, 
    ]
}