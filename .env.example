# Harness MCP Server Environment Configuration
# Copy this file to .env and fill in your values

# Harness Configuration
HARNESS_API_KEY=your_harness_api_key_here
HARNESS_BASE_URL=https://app.harness.io
HARNESS_ACCOUNT_ID=your_account_id_here
HARNESS_ORG_ID=your_org_id_here
HARNESS_PROJECT_ID=your_project_id_here

# Server Configuration
HARNESS_MCP_MODE=stdio
HARNESS_MCP_LOG_LEVEL=info
HARNESS_MCP_HTTP_PORT=8080
HARNESS_MCP_HTTP_HOST=0.0.0.0

# Rust Configuration
RUST_LOG=info

# Docker Configuration
IMAGE_TAG=latest
REGISTRY=
PORT=8080